# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                              @controllers.Application.dashboard
GET         /dashboard                     @controllers.Application.dashboard

GET         /keyform                       @controllers.Application.keyForm
POST        /savekey                       @controllers.Application.saveKey

GET         /tokenform                     @controllers.Application.tokenForm
POST        /savetoken                     @controllers.Application.saveToken
GET         /profile                       @controllers.Application.profile

GET         /create                        @controllers.LoginController.createPage
POST        /create                        @controllers.LoginController.create

GET         /accumulate                    @controllers.TrelloController.accumulateToday()

GET         /board/:id                     @controllers.Application.board(id: String)

GET         /period/:boardId               @controllers.TrelloController.period(boardId: String)
GET         /series/:boardId               @controllers.TrelloController.series(boardId: String)



GET         /login                         @controllers.LoginController.loginPage
POST        /login                         @controllers.LoginController.login
GET         /logout                        @controllers.LoginController.logout

GET         /authenticate/:provider        controllers.SocialAuthController.authenticate(provider)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)

# WebJars
GET         /webjars/*file                 @controllers.WebJarAssets.at(file)

